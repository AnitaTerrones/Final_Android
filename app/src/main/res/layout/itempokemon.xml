<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImagenPokemon"
        android:layout_width="115dp"
        android:layout_height="116dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNombrePokemon"
        android:layout_width="177dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="Nombre Pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivImagenPokemon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTipoPokemon"
        android:layout_width="178dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Tipo de Pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivImagenPokemon"
        app:layout_constraintTop_toBottomOf="@+id/tvNombrePokemon" />

    <TextView
        android:id="@+id/tvLatitudPokemon"
        android:layout_width="177dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Latitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivImagenPokemon"
        app:layout_constraintTop_toBottomOf="@+id/tvTipoPokemon" />

    <TextView
        android:id="@+id/tvLonguitudPokemon"
        android:layout_width="176dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Longuitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivImagenPokemon"
        app:layout_constraintTop_toBottomOf="@+id/tvLatitudPokemon" />

</androidx.constraintlayout.widget.ConstraintLayout>